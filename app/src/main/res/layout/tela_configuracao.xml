<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="24dp"
                android:text="Configurações"
                android:textColor="#000000"
                android:textSize="28dp"></TextView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="12dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="height from lents*:"
                    android:textColor="#000000"
                    android:textSize="21dp" />

                <NumberPicker
                    android:background="@drawable/edittextborder"
                    android:id="@+id/heightFromLents"
                    android:descendantFocusability="blocksDescendants"
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="90dp"></NumberPicker>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="cm"
                    android:textColor="#000000"
                    android:textSize="21dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="12dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="threshold point:"
                    android:textColor="#000000"
                    android:textSize="21dp" />

                <Spinner
                    android:layout_weight="1"
                    android:id="@+id/thresholdSpinner"
                    android:textColor="#000000"
                    android:layout_width="0dp"
                    android:text="automatic"
                    android:layout_height="wrap_content"></Spinner>

            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="12dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Process:"
                    android:textColor="#000000"
                    android:textSize="21dp" />

                <Spinner
                    android:layout_weight="1"
                    android:id="@+id/processSpinner"
                    android:textColor="#000000"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"></Spinner>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="12dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resolution (MP):"
                    android:textColor="#000000"
                    android:textSize="21dp" />

                <Spinner
                    android:layout_weight="1"
                    android:id="@+id/resolutionSpinner"
                    android:textColor="#000000"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"></Spinner>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="12dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Photo area:"
                    android:textColor="#000000"
                    android:textSize="21dp" />

                <Spinner
                    android:layout_weight="1"
                    android:id="@+id/photoAreaSpinner"
                    android:textColor="#000000"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"></Spinner>

            </LinearLayout>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/deleteTrainnningButton"
                android:text="Delete all trainning"
                android:onClick="deleteTrainningButton"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/trainnningButton"
                android:text="Train logistic"
                android:onClick="trainningButton"/>
            <TextView
                android:id="@+id/percentageErrorLogisticTextView"
                android:layout_gravity="center"
                android:textSize="24sp"
                android:textColor="@color/primary_dark_material_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"/>

            <Button
                android:layout_gravity="center"
                android:id="@+id/sign_out_button"
                android:text="Sign Out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />




        </LinearLayout>




    </ScrollView>

</LinearLayout>