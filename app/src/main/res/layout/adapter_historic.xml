<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/adapterHistoricLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangule_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/idAdapter"
            android:layout_width="@dimen/widget_adapter"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="10dip"
            android:gravity="center"
            android:singleLine="true"
            android:text="ID"
            android:textColor="#000000"
            android:textSize="@dimen/adapter_list" />

        <TextView
            android:id="@+id/codeAdapter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="CODE"
            android:textAlignment="gravity"
            android:textColor="#000000"
            android:textSize="@dimen/adapter_list" />

        <TextView
            android:id="@+id/eggsAdapter"
            android:layout_width="@dimen/widget_adapter"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="10dip"
            android:gravity="center"
            android:singleLine="true"
            android:text="EGGS"
            android:textAlignment="gravity"
            android:textColor="#000000"

            android:textSize="@dimen/adapter_list" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/adapterInvisibleLinearLayout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/descriptionAdapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/dateAdapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/addressAdapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#000000" />
    </LinearLayout>
</LinearLayout>