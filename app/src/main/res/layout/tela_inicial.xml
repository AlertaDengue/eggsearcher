<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/fundo">


    <ImageView
        android:layout_marginTop="50dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src = "@drawable/icon" />

    <Button
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/botao"
        android:text="@string/button_picture"
        android:onClick="tirarFoto">
    </Button>

    <Button
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/botao"
        android:text="@string/button_upload"
        android:onClick="upload">
    </Button>

    <Button
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/botao"
        android:text="@string/button_senddata"
        android:onClick="sendData">
    </Button>

    <Button
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/botao"
        android:text="@string/button_settings"
        android:onClick="configuracoes">
    </Button>

    <Button
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/botao"
        android:text="@string/button_historic"
        android:onClick="historic">
    </Button>

    <Button
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/botao"
        android:text="calibrate"
        android:onClick="calibrate">
    </Button>

    <Button
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/botao"
        android:text="@string/button_historiccalibrate"
        android:layout_marginBottom="50dp"
        android:onClick="histCalibrate">
    </Button>

</LinearLayout>